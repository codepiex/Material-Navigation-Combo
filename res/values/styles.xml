<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/primary</item>
    </style>
   
    <!-- Toolbar Activity Base theme. -->
    <style name="ToolbarActivityBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="ToolbarActivityTheme" parent="ToolbarActivityBaseTheme"/>
    
    <!-- Base ToolBar theme. -->
     <style name="ToolBarBaseTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

     <!-- ToolBar theme. -->
     <style name="ToolBarTheme" parent="ToolBarBaseTheme">
         <item name="colorPrimary">@color/primary</item>
         <item name="android:textColorSecondary">@android:color/white</item>
     </style>
     
    

</resources>
